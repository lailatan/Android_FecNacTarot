        android:icon="@mipmap/estrellas_ico"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/estrella_ico"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".PreferenciasActivity" />
