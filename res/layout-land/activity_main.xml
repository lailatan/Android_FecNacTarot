<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/pergamino5"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/button_margin"
            android:paddingTop="@dimen/button_margin"
            android:gravity="top">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="@dimen/button_margin"
                android:src="@drawable/gear"
                android:onClick="abrirConfiguracion"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text"
                android:textColor="@color/colorPrimaryDark"
                android:padding="10dp"
                android:text=""
                android:id="@+id/ingresarFechaTV"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:src="@drawable/estrellas2"/>
            </LinearLayout>

    </LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center_horizontal"
        android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text"
                android:textColor="@color/colorPrimaryDark"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/estrella_small"
                android:text="@string/birth_day"
                android:onClick="abrirFechaNacimiento"
                android:id="@+id/fechaNacBT"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="@dimen/button_margin"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/estrella_small2"
                android:text="@string/day_arcane"
                android:onClick="abrirMensajeDia"
                android:id="@+id/mensajeDiaBT"/>

    </LinearLayout>

</LinearLayout>